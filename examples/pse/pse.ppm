client pse
  integer, dimension(4) :: bcd = ppm_param_bcdef_periodic

  ppm_init()

  t = create_topology(bcd)

  c = create_particles(t)
  global_mapping(c,t)

  f = create_field(2, "Field1")

  discretize(f,c)

  ghost_mapping(c)
  create_neighlist(c)

  Lap = define_op(2, [2, 0, 0, 2], [1, 1, 1, 1], "Laplacian")
  L = compute_op(Lap, c, "DC-PSE")

  o, nstages = create_ode([f=>c], pse_rhs, [f], eulerf)

  timeloop
    do i=1,nstages
      ode_step(o, t?, dt?, nstages)
    end do
  end timeloop

  ppm_finalize()
end client
